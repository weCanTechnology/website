---
// src/components/global/ContactLink.astro

export interface Props {
  href?: string;
}
const { href = "/#contact" } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, ""); 
---

<a href={href} class="contact-link">
  <span class="arrow-icon">
    <img src={baseUrl +"/icons/arrow-contact.svg"} alt="" class="arrow-default" />
    <img src={baseUrl +"/icons/arrow-contact-hover.svg"} alt="" class="arrow-hover" />
  </span>
  <span>Contact Us</span>
</a>

<style>
  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 500;
    color: var(--color-accent-light-blue);
    text-decoration: none;
    transition: color 0.2s ease-in-out;
  }

  .contact-link:hover {
    color: var(--color-background-very-light-teal);
  }

  .arrow-icon {
    position: relative;
    width: 17px;
    height: 17px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .arrow-icon img {
    position: absolute;
    transition: opacity 0.8s ease-in-out;
  }

  .arrow-hover {
    opacity: 0;
  }

  .contact-link:hover .arrow-default {
    opacity: 0;
  }

  .contact-link:hover .arrow-hover {
    opacity: 1;
  }
</style>
