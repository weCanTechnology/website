---
// src/components/global/Header.astro
import { navLinks } from "../../data/content";
import ContactLink from "./ContactLink.astro";

export interface Props {
  isHomepage?: boolean;
}
const { isHomepage = false } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, ""); 

---

<header id="main-header" class:list={{ "is-homepage": isHomepage }}>
  <div class="container">
    <a href="/" class="logo">
      <img
        src={baseUrl + "/icons/wecan-logo-white.svg"}
        alt="WeCan Technology Logo"
      />
    </a>

    <div class="nav-wrapper">
      <nav>
        <ul>
          {
            navLinks.map((link) => (
              <li>
                <a href={link.href}>{link.text}</a>
              </li>
            ))
          }
        </ul>
      </nav>
      <ContactLink />
    </div>

    <button
      id="mobile-menu-toggle"
      class="hamburger-btn"
      aria-label="Open menu"
    >
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <div id="mobile-menu-overlay" class="mobile-menu-overlay">
    <nav class="mobile-nav">
      <ul>
        {
          navLinks.map((link) => (
            <li>
              <a href={link.href} class="mobile-link">
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
      <div class="mobile-contact-wrapper">
        <ContactLink />
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobil menu
  const toggleBtn = document.getElementById("mobile-menu-toggle");
  const overlay = document.getElementById("mobile-menu-overlay");
  const body = document.body;

  if (toggleBtn && overlay) {
    toggleBtn.addEventListener("click", () => {
      const isExpanded = toggleBtn.classList.toggle("active");
      overlay.classList.toggle("active");
      body.style.overflow = isExpanded ? "hidden" : "";
    });
    overlay.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        toggleBtn.classList.remove("active");
        overlay.classList.remove("active");
        body.style.overflow = "";
      });
    });
  }

  const header = document.getElementById("main-header");
  if (header && header.classList.contains("is-homepage")) {
    window.addEventListener(
      "scroll",
      () => {
        header.classList.toggle("scrolled", window.scrollY > 50);
      },
      { passive: true }
    );
  }
</script>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height, 120px); 
    z-index: 1000;
    transition: background-color 0.3s ease;
  }

  header.is-homepage {
    background-color: transparent;
  }

  header.scrolled {
    background-color: var(--color-background-dark);
  }

  header:not(.is-homepage) {
    background-color: var(--color-background-dark);
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    z-index: 1100; 
    position: relative;
  }

  .logo img {
    height: 24px;
    width: auto;
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    gap: 5rem;
  }

  nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 5rem;
    align-items: center;
  }

  nav a {
    color: #fff;
    font-weight: 600;
    font-size: 16px;
    line-height: 1.3;
    text-decoration: none;
    transition: color 0.3s ease;
    white-space: nowrap;
  }
  nav a:hover {
    color: var(--color-accent-teal-light);
  }

  nav li {
    position: relative;
  }

  nav li::after {
    content: "";
    position: absolute;
    right: -2.5rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 18px;
    background-color: var(--color-accent-teal-light);
    opacity: 0.5;
  }

  nav li:last-child::after {
    display: none;
  }

  .hamburger-btn {
    display: none;
  }

  .mobile-menu-overlay {
    display: none;
  }

  /* --- mobil&tablet --- */
  @media (max-width: 1024px) {
    .nav-wrapper {
      display: none;
    }

    .hamburger-btn {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 24px;
      height: 24px;
      aspect-ratio: 1/1;
      background: none;
      border: none;
      cursor: pointer;
      z-index: 1100;
      padding: 0;
    }

    .hamburger-btn span {
      display: block;
      width: 100%;
      height: 2px;
      background-color: var(--color-accent-teal-light);
      transition: all 0.3s ease;
    }

    .hamburger-btn.active span:nth-child(1) {
      transform: translateY(11px) rotate(45deg);
    }

    .hamburger-btn.active span:nth-child(2) {
      opacity: 0;
    }

    .hamburger-btn.active span:nth-child(3) {
      transform: translateY(-11px) rotate(-45deg);
    }

    .mobile-menu-overlay {
      display: flex; 
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: var(--color-background-dark);
      padding-top: 100px; 
      z-index: 1000;

      flex-direction: column;
      align-items: center;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-20px);
      transition: all 0.3s ease;
    }

    .mobile-menu-overlay.active {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .mobile-nav ul {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .mobile-nav li::after {
      display: none;
    }

    .mobile-link {
      font-size: 24px; 
    }

    .mobile-contact-wrapper {
      margin-top: 2rem;
    }
  }
</style>
