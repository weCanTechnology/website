<style>
  footer {
    background-color: var(--color-background-dark);
    color: white;
    position: relative;
    overflow: hidden; 
    padding-top: 80px;
    padding-bottom: 40px;
  }

  .ripple-bg {
    position: absolute;
    left: 0;
    bottom: 0;
    
    height: 60%; 
    width: auto;
    
    transform: translateX(0%);
    z-index: 0; 
    pointer-events: none; 
    opacity: 0.4; 
  }

  .ripple-bg svg {
    display: block;
    height: 100%;
    width: auto;
  }

  .ripple-group path {
    opacity: 0.1;
    stroke-width: 2.5px;
    animation: ripplePulse 4s infinite ease-in-out;
    transform-origin: center;
  }

  @keyframes ripplePulse {
    0%, 100% {
      opacity: 0.1;
      stroke-width: 2.5px;
    }
    50% {
      opacity: 0.6;
      stroke-width: 4px;
    }
  }

  /* Késleltetések (maradnak) */
  .ripple-group path:nth-child(1) { animation-delay: 0s; }
  .ripple-group path:nth-child(2) { animation-delay: 0.1s; }
  .ripple-group path:nth-child(3) { animation-delay: 0.2s; }
  .ripple-group path:nth-child(4) { animation-delay: 0.3s; }
  .ripple-group path:nth-child(5) { animation-delay: 0.4s; }
  .ripple-group path:nth-child(6) { animation-delay: 0.5s; }
  .ripple-group path:nth-child(7) { animation-delay: 0.6s; }
  .ripple-group path:nth-child(8) { animation-delay: 0.7s; }
  .ripple-group path:nth-child(9) { animation-delay: 0.8s; }
  .ripple-group path:nth-child(10) { animation-delay: 0.9s; }
  .ripple-group path:nth-child(11) { animation-delay: 1.0s; }
  .ripple-group path:nth-child(12) { animation-delay: 1.1s; }
  .ripple-group path:nth-child(13) { animation-delay: 1.2s; }
  .ripple-group path:nth-child(14) { animation-delay: 1.3s; }
  .ripple-group path:nth-child(15) { animation-delay: 1.4s; }
  .ripple-group path:nth-child(16) { animation-delay: 1.5s; }
  .ripple-group path:nth-child(17) { animation-delay: 1.6s; }
  .ripple-group path:nth-child(18) { animation-delay: 1.7s; }
