  .ripple-group path:nth-child(22) { animation-delay: 2.1s; }
  .ripple-group path:nth-child(23) { animation-delay: 2.2s; }
  .ripple-group path:nth-child(24) { animation-delay: 2.3s; }

  footer .container {
    width: 100%;
    max-width: 100%;
    position: relative; 
    z-index: 2; 
    margin: 0 auto;
    padding-left: var(--container-padding-x, 120px);
    padding-right: var(--container-padding-x, 120px);
    box-sizing: border-box;
  }

  .top-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 40px; 
    margin-bottom: 60px;
  }

