---
// src/layouts/MainLayout.astro
import "../styles/global.css";
import Header from "../components/global/Header.astro";
import Footer from "../components/global/Footer.astro";

export interface Props {
  title: string;
  isHomepage?: boolean;
}
const { title, isHomepage = false } = Astro.props;
---

<!doctype html>
<html lang="hu">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="WeCan Technology" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>    
  </head>
  <body class:list={{ "is-homepage-body": isHomepage }}>
    <Header isHomepage={isHomepage} />
    
    <main>
      <slot />
    </main>
    
    <Footer />

    <script>
      const header = document.getElementById('main-header');
      if (header && header.classList.contains('is-homepage')) {
        const handleScroll = () => {
          // A 'scrolled' class hozzáadása/törlése a görgetési pozíció alapján
          header.classList.toggle('scrolled', window.scrollY > 50);
        };
        window.addEventListener('scroll', handleScroll, { passive: true });
        handleScroll(); // Futtatás betöltéskor is
      }
    </script>
  </body>
</html>

