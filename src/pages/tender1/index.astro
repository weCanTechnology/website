---
// src/pages/tender/ginop.astro
import MainLayout from "../../layouts/MainLayout.astro";
import SectionHeader from "../../components/global/SectionHeader.astro";
import { tender1Content } from "../../data/content-tender1";

const { projectData, meta, sectionHeader, card, content } = tender1Content;
---

<MainLayout title={meta.title}>
  <section class="tender-section">
    <div class="container">
      <div class="page-header">
        <SectionHeader title={sectionHeader.title} />
      </div>

      <div class="tender-grid">
        <aside class="info-column">
          <div class="project-card">
            <div class="card-header">
              <h3>{card.title}</h3>
              <div class="card-line"></div>
            </div>

            <div class="info-item">
              <span class="label">{card.labels.contractNumber}</span>
              <span class="value small-text">{projectData.contractNumber}</span>
            </div>

            <div class="info-item">
              <span class="label">{card.labels.amount}</span>
              <span class="value highlight">{projectData.amount}</span>
            </div>

            <div class="info-item">
              <span class="label">{card.labels.awardDate}</span>
              <span class="value">{projectData.awardDate}</span>
            </div>

            <div class="info-item">
              <span class="label">{card.labels.maturityDate}</span>
              <span class="value">{projectData.maturityDate}</span>
            </div>

            <div class="info-item">
              <span class="label">{card.labels.location}</span>
              <span class="value">{projectData.location}</span>
            </div>

            <div class="info-item contact-item">
              <span class="label">{card.labels.moreInfo}</span>
              <a href={`mailto:${projectData.email}`} class="value link"
                >{projectData.email}</a
              >
            </div>
          </div>
        </aside>

        <div class="content-column">
          <span class="subtitle">{projectData.code}</span>
          <h2 class="project-title">{projectData.programName}</h2>

          <div class="text-body">
            <p set:html={content.intro} />

            <h3>{content.purposeTitle}</h3>
            <p>{content.purposeText}</p>

            <div class="highlight-box">
              <p>{content.highlightBox}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* --- Section alapok (Ugyanaz a stílus, mint az előzőnél) --- */
  .tender-section {
    position: relative;
    padding-bottom: 6rem;
    overflow: hidden;
  }

  .tender-section::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 329px;
    height: 679px;
    z-index: 0;
    opacity: 0.6;
    background-image: url("icons/about-us-background.svg");
    background-repeat: no-repeat;
    background-size: contain;
    transform: scaleX(-1);
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .page-header {
    margin-bottom: 4rem;
  }

  /* --- Grid Layout --- */
  .tender-grid {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 4rem;
    align-items: flex-start;
  }

  /* --- Kártya Stílus --- */
  .project-card {
    background: linear-gradient(
      284deg,
      rgba(246, 247, 255, 0.9) 62.78%,
      rgba(223, 238, 246, 0.9) 100.99%
    );
    backdrop-filter: blur(15px);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.5);
    position: sticky;
    top: 140px;
  }

  .card-header h3 {
    font-family: var(--font-family-base);
    font-size: 24px;
    font-weight: 700;
    color: var(--Primary-700, #101f85);
    margin-bottom: 1rem;
  }

  .card-line {
    width: 60px;
    height: 4px;
    background-color: #20bbbd;
    border-radius: 2px;
    margin-bottom: 2rem;
  }

  .info-item {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-item {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(16, 31, 133, 0.1);
  }

  .label {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #606060;
    font-weight: 600;
  }

  .value {
    font-family: var(--font-family-base);
    font-size: 18px;
    color: var(--color-text-primary);
    font-weight: 500;
    line-height: 1.4;
    word-break: break-word; /* Hosszú kódok tördelése */
  }

  .value.highlight {
    color: var(--Primary-700, #101f85);
    font-weight: 700;
    font-size: 20px;
  }

  .value.link {
    color: var(--color-accent-teal-dark);
    text-decoration: underline;
  }

  .value.small-text {
    font-size: 16px; /* Kicsit kisebb a hosszú kódszám miatt */
  }

  /* --- Szöveges Tartalom --- */
  .subtitle {
    display: block;
    color: var(--color-accent-teal-dark);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .project-title {
    font-family: var(--font-family-base);
    font-size: 40px;
    font-weight: 600;
    color: var(--Primary-700, #101f85);
    line-height: 1.2;
    margin-bottom: 2.5rem;
  }

  .text-body h3 {
    font-size: 24px;
    color: var(--Primary-700, #101f85);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .text-body p {
    font-size: 18px;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    font-weight: 400;
  }

  .highlight-box {
    border-left: 4px solid #20bbbd;
    padding-left: 2rem;
    margin: 2.5rem 0;
    background: rgba(32, 187, 189, 0.05); /* Halvány háttér a kiemelésnek */
    padding: 2rem;
    border-radius: 0 16px 16px 0;
  }

  .highlight-box p {
    font-style: italic;
    color: var(--Primary-700, #101f85);
    font-weight: 500;
    margin-bottom: 0;
  }

  /* --- Reszponzivitás --- */
  @media (max-width: 1024px) {
    .tender-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .project-card {
      position: static;
      max-width: 100%;
    }

    .project-title {
      font-size: 32px;
    }
  }

  @media (max-width: 768px) {
    .tender-section {
      padding-top: 2rem;
    }

    .project-card {
      padding: 1.5rem;
    }

    .project-title {
      font-size: 28px;
      margin-bottom: 1.5rem;
    }
  }
</style>
