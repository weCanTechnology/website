---
// src/pages/tender/index.astro
import MainLayout from "../../layouts/MainLayout.astro";
import SectionHeader from "../../components/global/SectionHeader.astro";
import { tender2Content } from "../../data/content-tender2";

const { projectData, meta, sectionHeader, card, content } = tender2Content;
---

<MainLayout title={meta.title}>
  <section class="tender-section">
    <div class="container">
      
      <div class="page-header">
        <SectionHeader title={sectionHeader.title} />
      </div>

      <div class="tender-grid">
        
        <aside class="info-column">
          <div class="project-card">
            <div class="card-header">
              <h3>{card.title}</h3>
              <div class="card-line"></div>
            </div>
            
            <div class="info-item">
              <span class="label">{card.labels.beneficiary}</span>
              <span class="value">{projectData.beneficiary}</span>
            </div>

            <div class="info-item">
              <span class="label">{card.labels.amount}</span>
              <span class="value highlight">{projectData.amount}</span>
            </div>

            <div class="info-item">
              <span class="label">{card.labels.deadline}</span>
              <span class="value">{projectData.deadline}</span>
            </div>

            <div class="info-item">
              <span class="label">{card.labels.title}</span>
              <span class="value">{projectData.title}</span>
            </div>
          </div>
        </aside>

        <div class="content-column">
          <h2 class="project-title">{projectData.goal}</h2>
          
          <div class="text-body">
            <p>{content.intro}</p>
            
            <p>{content.description}</p>

            <div class="highlight-box">
              <p>{content.highlightBox}</p>
            </div>

            <p>{content.closing1}</p>

            <p>{content.closing2}</p>
          </div>
        </div>

      </div>
    </div>
  </section>
</MainLayout>

<style>
  .tender-section {
    position: relative;
    padding-bottom: 6rem;
    overflow: hidden;
  }

  .tender-section::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0; 
    width: 329px;
    height: 679px;
    z-index: 0;
    opacity: 0.6;
    background-image: url("icons/about-us-background.svg");
    background-repeat: no-repeat;
    background-size: contain;
    transform: scaleX(-1); 
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .page-header {
    margin-bottom: 4rem;
  }

  .tender-grid {
    display: grid;
    grid-template-columns: 350px 1fr; 
    gap: 4rem;
    align-items: flex-start;
  }

  .project-card {
    background: linear-gradient(284deg, rgba(246, 247, 255, 0.9) 62.78%, rgba(223, 238, 246, 0.9) 100.99%);
    backdrop-filter: blur(15px);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    border: 1px solid rgba(255, 255, 255, 0.5);
    position: sticky;
    top: 140px; 
  }

  .card-header h3 {
    font-family: var(--font-family-base);
    font-size: 24px;
    font-weight: 700;
    color: var(--Primary-700, #101f85);
    margin-bottom: 1rem;
  }

  .card-line {
    width: 60px;
    height: 4px;
    background-color: #20BBBD; 
    border-radius: 2px;
    margin-bottom: 2rem;
  }

  .info-item {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .info-item:last-child {
    margin-bottom: 0;
  }

  .label {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #606060;
    font-weight: 600;
  }

  .value {
    font-family: var(--font-family-base);
    font-size: 18px;
    color: var(--color-text-primary);
    font-weight: 500;
    line-height: 1.4;
  }

  .value.highlight {
    color: var(--Primary-700, #101f85);
    font-weight: 700;
    font-size: 20px;
  }

  .project-title {
    font-family: var(--font-family-base);
    font-size: 40px;
    font-weight: 600; 
    color: var(--Primary-700, #101f85);
    line-height: 1.2;
    margin-bottom: 2.5rem;
  }

  .text-body p {
    font-size: 18px; 
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    font-weight: 400;
  }

  .highlight-box {
    border-left: 4px solid #20BBBD;
    padding-left: 2rem;
    margin: 2.5rem 0;
  }

  .highlight-box p {
    font-style: italic;
    color: var(--Primary-700, #101f85);
    font-weight: 500;
  }

  @media (max-width: 1024px) {
    .tender-grid {
      grid-template-columns: 1fr; 
      gap: 3rem;
    }

    .project-card {
      position: static; 
      max-width: 100%;
    }

    .project-title {
      font-size: 32px;
    }
  }

  @media (max-width: 768px) {
    .tender-section {
        padding-top: 2rem;
    }
    
    .project-card {
        padding: 1.5rem;
    }

    .project-title {
        font-size: 28px;
        margin-bottom: 1.5rem;
    }
  }
</style>